NameVirtualHost <%= ipaddress %>:80>

<VirtualHost <%= ipaddress %>:80>
  ServerName <%= fqdn %>
  DocumentRoot /data/www/<%= fqdn %>/public/
  
  CustomLog /var/log/apache2/<%= fqdn %>.access.log combined
  ErrorLog /var/log/apache2/<%= fqdn %>.error.log

  SetEnv TMP /data/www/<%= fqdn %>/tmp

  <Location /statistik>
    AuthUserFile /data/www/<%= fqdn %>/etc/.htpasswd.awstats
    # For hard setting language use following
    # standard behavior is using browser language
    # AddLanguage de .de
  </Location>
</VirtualHost>
