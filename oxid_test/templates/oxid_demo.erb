NameVirtualHost <%= ipaddress %>:80>

<VirtualHost <%= ipaddress %>:80>
  ServerName <%= fqdn %>
  DocumentRoot /var/www/<%= fqdn %>/

  CustomLog /var/log/apache2/<%= fqdn %>.access.log combined
  ErrorLog /var/log/apache2/<%= fqdn %>.error.log

  SetEnv TMP /var/www/<%= fqdn %>/tmp
</VirtualHost>
